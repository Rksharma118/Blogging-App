<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>My Blogs</title>
    <style>
      body {
        background-image: none;
        background: linear-gradient(90deg,#aecdee,#e9d594);
      }
      .container {
        color: rgb(81, 98, 111);
        font-family: CWC, system-ui, sans-serif;
        font-size: 24px;
        line-height: 32px;
        font-weight: 400;
      }
      .btn {
        background-color: maroon;
        color: white;
      }
      .container1{
        display: flex;
        gap: 20px;
      }
    </style>
  </head>
  <body>
    <%- include("./partials/nav") %>
    <div class="container mt-4">
      <h1><%=blog.title%></h1>
      <p><%=blog.desc%></p>
      <pre class="mt-3"><%=blog.body%></pre>

      <div class="container1 mt-4">
        <!-- Form for editing the blog -->
        <form action="/blog/<%= blog._id %>/edit" method="get">
          <div class="mb-3">
            <input class="btn" type="submit" value="Edit" />
          </div>
        </form>

        <!-- Form for deleting the blog -->
        <form action="/blog/<%= blog._id %>/delete" method="post">
          <div class="mb-3">
            <input
              class="btn"
              type="submit"
              value="Delete"
              onclick="return confirm('Are you sure you want to delete this blog post?');"
            />
          </div>
        </form>
      </div>
    </div>
    <%- include('./partials/script.ejs') %>
    
  </body>
</html>
